@model List<Web.Models.Kataloglar>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Aktas Mobilya - Kategoriler</title>
    <link rel="icon" type="image/png" href="~/Content/image/WebLogo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <style>
        .card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.5);
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            }


        .card-img-top {
            height: 250px;
            object-fit: cover;
        }


        .kategori-karti a {
            text-decoration: none !important;
            color: inherit !important;
            display: block;
        }
    </style>
    <div class="container mt-5">
        <h2 class="mb-4">Tüm Kategoriler</h2>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-3 kategori-karti">
                    <a href="/Home/@item.KatalogYol">
                        <div class="card">
                            <img src="~/Content/image/@item.KatalogResim" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <h5>@item.KatalogAdi</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
