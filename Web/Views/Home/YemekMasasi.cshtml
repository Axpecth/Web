@model List<Web.Models.Urunler>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <title>Aktas Mobilya - Yemek Masası</title>
    <link rel="icon" type="image/png" href="~/Content/image/WebLogo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .custom-card {
            display: flex;
            border: 1px solid #ccc;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            height: 180px;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.5);
        }

            .custom-card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

            .custom-card img {
                height: 180px;
                width: auto;
                object-fit: cover;
                border-top-left-radius: 12px;
                border-bottom-left-radius: 12px;
                flex-shrink: 0;
            }

        .custom-card-body {
            padding: 15px 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 100%;
        }

            .custom-card-body h5 {
                margin-bottom: 10px;
                font-weight: 700;
                color: #222;
            }

            .custom-card-body p {
                margin-bottom: 10px;
                color: #555;
                flex-grow: 1;
            }

            .custom-card-body .price {
                font-weight: 700;
                color: #000;
                margin-top: auto;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Yemek Masası</h2>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                if (item.Kataloglar.KatalogAdi == "Yemek Masası")
                {
                    if (item.Aktif == true)
                    {
                        <div class="col-md-6">
                            <div class="custom-card">
                                <img src="@Url.Content("~/Content/image/" + item.ResimYolu)" alt="@item.UrunAdi" />
                                <div class="custom-card-body">
                                    <h5>@item.UrunAdi</h5>
                                    <p>@item.Aciklama</p>
                                    <p class="price">₺@item.Fiyat</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
