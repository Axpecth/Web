@model Web.DataModel.MobilyaBilgi
@{
    ViewBag.Title = "Kampanya Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3>💸 Kampanya İşlemleri</h3>
        <a href="/Admin/Index" class="btn btn-secondary">← Panele Dön</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">Kampanya Oluştur</div>
                <div class="card-body">
                    <form action="/Admin/KampanyaIslem" method="post">
                        <div class="mb-2">
                            <label class="form-label">Ürün Seç</label>
                            <select name="kampurun" class="form-select" required>
                                <option selected disabled value="">Ürün Seciniz</option>
                                @foreach (var item in Model.urunlers)
                                {
                                    <option value="@item.UrunID">@item.UrunAdi</option>
                                }
                            </select>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">İndirim Oranı (%)</label>
                            <input type="number" name="KIndirimOran" class="form-control" min="0" max="100" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Eski Fiyat</label>
                            <input type="number" name="KEskiFiyat" class="form-control" step="0.01" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Güncel Fiyat</label>
                            <input type="number" name="KYeniFiyat" class="form-control" step="0.01" required />
                        </div>
                        <button type="submit" name="KampEkle" class="btn btn-warning w-100" value="Ekle">Kampanya Yap</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">Aktif Kampanyalar</div>
                <div class="card-body p-0">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Ürün</th>
                                <th>İndirim</th>
                                <th>Güncel Fiyat</th>
                                <th>Resim</th>
                                <th>Islem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.kampanyaliUrunlers.OrderByDescending(x => x.KampanyaID))
                            {
                                if (item.Aktif == true)
                                {
                                    <tr>
                                        <td>@item.Urunler.UrunAdi</td>
                                        <td>%@item.IndirimOrani</td>
                                        <td>₺@item.GuncelFiyat</td>
                                        <td><img style="width:50px; height:50px; object-fit:cover;" src="~/Content/image/@item.Urunler.ResimYolu" /></td>
                                        <td>
                                            <form action="/Admin/KampanyaSil" method="post" onsubmit="return confirm('Bu kampanyayı silmek istediğinizden emin misiniz?');">
                                                <input type="hidden" name="id" value="@item.KampanyaID" />
                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>