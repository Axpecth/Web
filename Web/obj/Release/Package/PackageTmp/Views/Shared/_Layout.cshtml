<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/Content/image/WebLogo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <style>
        body {
            background-color: white !important;
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("AnaSayfa", "Home")">
                <img src="~/Content/image/WebLogo.png" alt="Aktas Mobilya Logosu" width="35" height="30" class="d-inline-block align-text-top me-2">
                Aktas Mobilya
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("AnaSayfa", "Home")">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Kategori", "Home")">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Hakkimizda", "Home")">Hakkimizda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Iletisim", "Home")">Iletisim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <div style="width: 100%; margin: 0; padding: 0;">
            <footer class="bg-dark text-white text-center py-4">
                <div class="row w-100 mx-0">
                    <div class="col-md-4 mb-3">
                        <h5>Aktas Mobilya</h5>
                        <p>Kalite ve ucuz fiyatlarin bulusma noktası.<br>Sende hemen alisverise basla ve evini diz.</p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Iletisim</h5>
                        <p>E-posta: aktasmobilya666@gmail.com<br>Telefon: 0539 817 85 99</p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Bizi Takip Edin</h5>
                        <a href="https://keciborlumyo.isparta.edu.tr/" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                        <a href="https://isparta.edu.tr/" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                        <a href="https://keciborlumyo.isparta.edu.tr/" class="text-white"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
                <hr class="bg-light" style="width: 90%; margin: auto;">
                <p class="mb-0 mt-3">&copy; Aktas Mobilya - Tüm Haklari Saklidir.</p>
            </footer>
        </div>


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
