@model Web.Models.IletisimModel 

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Aktas Mobilya - Iletisim</title>
    <link rel="icon" type="image/png" href="~/Content/image/WebLogo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <style>
        .alert {
            max-width: 300px;
            width: 100%;
        }
    </style>
    <section class="container mt-5 mb-5">
        <h2 class="mb-4 text-center">Bizimle Iletisime Gecin</h2>
        <div class="row">

            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-info">@TempData["Message"]</div>
                        }

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Ad_Soyad, "Ad Soyad", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Ad_Soyad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ad_Soyad, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Telefon, new
                            {
                                @class = "form-control",
                                @id = "Telefon",
                                type = "tel",
                                pattern = "05[0-9]{9}",
                                maxlength = "11",
                                inputmode = "numeric"
                            })
                            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                        </div>
                        <script>
                        document.getElementById("Telefon").addEventListener("input", function () {
                            this.value = this.value.replace(/[^0-9]/g, '');
                        });
                        </script>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Fotoğraf, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Fotoğraf, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Fotoğraf, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Konu, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Konu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Mesaj, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.Mesaj, new { @class = "form-control", rows = 4 })
                            @Html.ValidationMessageFor(model => model.Mesaj, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Gonder" class="btn btn-warning w-100" />
                        </div>

                    </div>
                }
            </div>


            <div class="col-md-6">
                <div class="ratio ratio-16x9 mb-4">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13089.903462024457!2d30.296782875652415!3d37.9474495850829!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c5da8ed991ae47%3A0xb8656dcdeaa06117!2sIsparta%20Uygulamal%C4%B1%20Bilimler%20%C3%9Cniversitesi%20Ke%C3%A7iborlu%20Meslek%20Y%C3%BCksek%20Okulu!5e0!3m2!1str!2str!4v1747739011201!5m2!1str!2str"
                            width="100" height="100"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>

                <div class="bg-light p-3 rounded shadow-sm">
                    <h5 class="fw-bold">Iletisim Bilgilerimiz</h5>
                    <p><strong>Adres:</strong> Aktas Mobilya, Isparta Keciborlu Meslek Yuksekokulu, Isparta/Turkiye</p>
                    <p><strong>Telefon:</strong> 0539 817 85 99</p>
                    <p><strong>E-posta:</strong> aktasmobilya666@gmail.com</p>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
